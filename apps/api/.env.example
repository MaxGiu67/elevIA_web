# UPGRAI API Environment Variables
# Copy this file to .env

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://upgrai:upgrai_dev_password@localhost:5432/upgrai
REDIS_URL=redis://localhost:6379

# =============================================================================
# VECTOR STORE
# =============================================================================
# For local development:
CHROMA_HOST=localhost
CHROMA_PORT=8001
# For production (Azure Container Apps):
# CHROMA_URL=https://chromadb.purplepond-70527a6e.westeurope.azurecontainerapps.io

# =============================================================================
# AI / LLM
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
OPENAI_API_KEY=sk-your-openai-api-key-here
DEEPSEEK_API_KEY=sk-your-deepseek-key-here
LLAMA_CLOUD_API_KEY=llx-your-llama-cloud-key-here

# =============================================================================
# APPLICATION
# =============================================================================
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# JWT / SECURITY
# =============================================================================
JWT_SECRET_KEY=dev-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# SECURITY
# =============================================================================
CORS_ORIGINS=["http://localhost:3000"]
SECRET_KEY=dev-secret-key-change-in-production

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60
